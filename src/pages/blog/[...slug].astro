---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  return allPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
    post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---
<BaseLayout title={post.data.title}>
  <div class="portfolio-container" style="padding-top: 50px;">
    <article>
      <header class="hero-section" style="margin-bottom: 0;">
        <h1 style="font-size: 2.8rem;">{post.data.title}</h1>
        <p style="color:var(--text-secondary); margin-top: 10px;">
            Oleh: {post.data.author} | Diterbitkan pada: {post.data.date.toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}
        </p>
      </header>
      <hr style="border-color: var(--border-color); margin: 40px auto; width: 50%;">
      
      <div class="post-content" style="line-height:1.8; color: var(--text-primary);">
        <Content />
      </div>

    </article>
  </div>
</BaseLayout>